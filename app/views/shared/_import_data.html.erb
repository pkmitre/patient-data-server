<a href="#<%= type %>" role="button" class="btn pull-right" data-toggle="modal">+</a>
 
<!-- Modal -->
<div id="<%= type %>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel"><%= type.to_s.titleize %></h3>
  </div>
  <%= form_for RemoteData.new(data_type: type), url: record_data_path(@record.medical_record_number),:html=>{:class=>"form-horizontal"}  do |f| %>
  <div class="modal-body">
  	
  <%= f.text_field :url, style: "width:97%" %>
  <%= f.hidden_field :data_type %>
	
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>

    <%= f.submit "Add", :class=>"btn btn-primary" %>
  </div>
  <% end %>
</div>
